{
    // Enforcing options
    "eqeqeq": false,
    "forin": true,
    "indent": 4,
    "noarg": true,
    "undef": true,
    "trailing": true,
    "evil": true,
    "laxcomma": true,

    // Relaxing options
    "onevar": false,
    "asi": false,
    "eqnull": true,
    "expr": false,
    "loopfunc": true,
    "sub": true,
    "browser": true,
    "node": true,
    "globals": {
        "define": true
    }
}
